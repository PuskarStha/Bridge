<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/nam"
        android:layout_marginTop="30dp"
        android:text="name"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Name    -"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:id="@+id/nam"
        />

    <TextView
        android:id="@+id/user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  message"
        android:textSize="20dp"
        android:visibility="visible"
        android:textColor="@android:color/black"
        android:layout_below="@+id/user_address"
        android:layout_alignStart="@+id/user_contact"
        android:layout_marginTop="9dp" />


    <TextView
        android:id="@+id/user_address"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:text="address"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/address12"
        android:visibility="visible"
        android:textColor="@android:color/black"
        android:layout_below="@+id/user_contact"
        android:layout_marginTop="9dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Address -"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/address12"
        android:layout_above="@+id/user_message"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_contact"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:text="contact"
        android:textSize="20dp"
        android:visibility="visible"
        android:textColor="@android:color/black"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"

        android:layout_below="@+id/user_name"
        android:layout_toEndOf="@+id/address12" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Contact -"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="80dp"
        android:id="@+id/contact12"
        android:layout_above="@+id/user_address" />


</RelativeLayout>
    </ScrollView>