<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.puskar.bridge.text2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" To log into your Bridge account:\n\n

1. Open the Bridge application.\n\n

2. Enter the username of your account.\n\n

3. Enter your password and tap Log In."
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:textAlignment="textStart"
        android:layout_below="@+id/text1"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How do I log into my Bridge account? "
        android:textSize="24sp"
        android:lineSpacingExtra="8sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
