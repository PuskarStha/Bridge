<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.puskar.bridge.Help">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Center"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/help"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Questions You May Have:"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@id/help"
        android:layout_marginTop="32dp"
        android:id="@+id/text1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. How do i create a Bridge account?"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_below="@id/text1"
        android:layout_marginTop="32dp"
        android:onClick="text1click"
        android:id="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. How do i log into my Bridge account?"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_below="@id/text2"
        android:layout_marginTop="32dp"
        android:onClick="text2click"
        android:id="@+id/text3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. I can't log in."
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_below="@id/text3"
        android:layout_marginTop="32dp"
        android:id="@+id/text4"
        android:onClick="text3click"/>
</RelativeLayout>
</ScrollView>